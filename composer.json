{
    "name": "rdbx/yii2-user-setting",
    "description": "Yii2 personal settings Module",
    "type": "yii2-extension",
    "keywords": [
        "yii2",
        "settings",
        "config",
        "storage"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Chepurnoi",
            "email": "chepurnoi.igor@gmail.com"
        },
        {
            "name": "Ilyas Khairullin",
            "email": "khairullin.it@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "yiisoft/yii2": "~2.0.10",
        "yii2mod/yii2-editable": "*",
        "yii2mod/yii2-enum": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~3.0",
        "phpunit/phpunit": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Redbox\\PersonalSettings\\": ""
        }
    },
    "scripts": {
        "phpcs": "php-cs-fixer fix --config-file=.php-cs-fixer.php -v --diff --dry-run",
        "phpunit": "phpunit --coverage-text",
        "test": [
            "@phpunit",
            "@phpcs"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
